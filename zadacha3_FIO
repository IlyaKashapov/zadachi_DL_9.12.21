#include<iostream>
#include<ctime>
#include<time.h>
#include<windows.h>
#include<string.h>
using namespace std;
int main()
{   
    SetConsoleCP(1251);
    SetConsoleOutputCP(1251);
    char str[120];    
    int i = 0;
    cout << "Введите ФИО " << endl ;
    cin.getline(str, 120);
    while (str[i] != ' ') i++;
    cout << str[++i] << '.';
    while (str[i] != ' ') i++;
    cout << str[++i] << "."; i = 0;
    while (str[i] != ' ')
    cout << str[i++];
    cout << endl;
    return 0;
}
